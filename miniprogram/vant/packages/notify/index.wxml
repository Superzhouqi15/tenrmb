<van-transition
  name="slide-down"
  show="{{ show }}"
  custom-class="van-notify"
  custom-style="background:{{ background }}; color: {{ color }}; z-index: {{ zIndex }};"
>
  <view wx:if="{{ safeAreaInsetTop }}" class="van-notify__safe-top" style="padding-top: {{ statusBarHeight }}px"></view>
  {{ message }}
</van-transition>
