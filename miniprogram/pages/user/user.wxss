/* miniprogram/pages/index/index.wxss */

page {
  height: 100%;
  width: 100%;
  background-color: ghostwhite;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
}

.box {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
}

.vitem {
  text-align: center;
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center; 
}

.top {
  height: 25%;
  width: 100%;
  background: linear-gradient(#4990e2, #87c1f1);
  border-bottom-right-radius: 75%;
  border-bottom-left-radius: 75%;
}

.avatar{
  overflow: hidden;
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.text{
  color: whitesmoke
}
