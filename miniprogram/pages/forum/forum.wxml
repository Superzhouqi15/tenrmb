<!--miniprogram/pages/forum/forum.wxml-->

<view class="all">
  <view class="swipe">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000">
    <block wx:for="{{picList}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" class="slide-image" mode="aspectFill" bindtap='previewImg' data-previewurl='{{picList}}' data-currenturl='{{item}}' />
      </swiper-item>
    </block>
  </swiper>
  </view>
  
  <view class="box">
    <scroll-view  class="scroll" scroll-y >
    <i-card wx:for='{{allPost}}' title='{{itme.title}}' bindtap="InToGame" wx:key="*this">
      <view slot="content">{{item.title}}</view>
      <view slot="footer">{{item.time}}</view>
    </i-card>
    <view class="fill"></view>
  </scroll-view>
  </view>
  

  <button class="fixbox" bindtap="clickToPost">
    <text class="font">发布帖子</text>
  </button>


</view>