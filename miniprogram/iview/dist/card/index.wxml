<view class="i-class i-card {{ full ? 'i-card-full' : '' }}">
  <view class="i-class i-card-header">
    <view class="i-card-header-content">
      <image class="i-card-header-thumb" src="{{ thumb }}" mode="aspectFit" wx:if="{{ thumb }}" />      {{ title }}
    </view>
    <!--收藏-->
    <view class="i-card-collect">
      <image class="i-card-colect-logo" 
      src="{{collectLogoUrl}}"
      style="width:64rpx;height:64rpx;" 
      catchtap="clickCollect"
      mode="aspectFit"></image>
    </view>

    <view class="i-card-header-extra" wx:if="{{ extra }}">{{ extra }}</view>
    
  </view>
  <view class="i-class i-card-body">
    <text class="time-text">截止时间：</text>
    <slot name="content"></slot> <!--插槽-->
  </view>
  <view class="i-class i-card-footer">
    <slot name="footer"></slot>
  </view>
</view>